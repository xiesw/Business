<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="15dp"
              android:layout_gravity="center"
              android:background="@color/white"
              android:orientation="vertical">
    
    <TextView
        android:id="@+id/item_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微微一笑很优酷"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/item_price_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="$123"
        android:textColor="@color/color_ffff4444"
        android:textSize="14sp"/>
    
    <TextView
        android:id="@+id/item_info_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="6dp"
        android:text="@string/video"
        android:textColor="@color/color_333333"
        android:textSize="14sp"/>
    
    <LinearLayout
        android:id="@+id/prodct_photo_layout"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal">
    </LinearLayout>
    
    <TextView
        android:id="@+id/item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="@string/video"
        android:textColor="@color/result_view"
        android:textSize="14sp"/>
</LinearLayout>